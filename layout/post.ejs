<div class="wrapper">

    <% const hasImg = page.img ? true : false; %>

    <article class="post <%= hasImg ? 'post--photo post--cover' : 'post--text' %> post--index main-item">
        <div class="post-inner" data-aos="fade-up" data-aos-anchor-placement="top-bottom">
            <header class="post-item post-header  <%= hasImg ? 'no-bg' : ''; %>">
                <div class="wrapper post-wrapper">
                    <div class="avatar post-author">
                        <img src="<%= theme.authorAvatar ? theme.authorAvatar : url_for('images/avatar.png') %>" alt="作者头像" class="avatar-item avatar-img">
                        <span class="avatar-item">
                            <%= config.author %>
                        </span>
                    </div>
                </div>
            </header>

            <!-- 大图样式 -->
            <% if (hasImg) { %>
                <figure class="post-media <%= is_post() ? 'single' : ''; %>">
                    <img data-aos="zoom-out" data-aos-anchor-placement="top-bottom" itemprop="image" src="<%= page.img; %>" alt="头图" width="2000" height="800">
                </figure>
            <% } %>

            <section class="post-item post-body">
                <div class="wrapper post-wrapper">
                    <h1 class="post-title">
                        <a href="<%= url_for(page.path) %>" title="<%= page.title %>">
                            <%= page.title %>
                        </a>
                    </h1>
                    <div class="inner-post-wrapper">
                        <div class="meta post-meta">
                            <a itemprop="datePublished" href="<%= url_for(page.path) %>"
                                class="icon-ui icon-ui-date meta-item meta-date">
                                <span class="meta-count">
                                    <%= page.date.format('YYYY-MM-DD') %>
                                </span>
                            </a>

                            <!-- <a href="<%= page.path %>#comments"
                                class="icon-ui icon-ui-comment meta-item meta-comment">
                                <?php $this->commentsNum('暂无评论', '1 条评论', '%d 条评论'); ?>
                            </a> -->
                        </div>
                        <% if (is_post() && theme.showWordCount) { %>

                            <div class="meta post-meta">
                                <div class="icon-record-outline">
                                    全文共&nbsp;<%= wordcount(page.content) %>&nbsp;字，
                                    阅读约&nbsp;<%= min2read(page.content) %>&nbsp;分钟

                                </div>
                            </div>
                        <% } %>

                        <%- page.content %>


                        <!-- 判断并显示版权信息 -->
                        <% if (is_post() && theme.showCopyright) { %>
                            <div class="license-info-card">
                                <div class="license-info-title"><%= page.title %></div>
                                <a class="license-info-link" href="<%= page.permalink %>"><%= page.permalink %></a>
                                <div class="license-info-meta">
                                    <div>
                                        <span>本文作者</span>
                                        <span><%= config.author %></span>
                                    </div>
                                    <div>
                                        <span>发布时间</span>
                                        <span><%= page.date.format('YYYY-MM-DD') %></span>
                                    </div>
                                    <div>
                                        <span>许可协议</span>
                                        <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/deed.zh-hans">CC BY-NC-SA 4.0</a>
                                    </div>
                                </div>
                                <span class="cc-icon"></span>
                            </div>
                        <% } %>
                    </div>
                </div>
            </section>

            <% if (theme.comment.enable && page.comments) {  %>
            <section class="post-item post-comments">
                <div class="wrapper post-wrapper" id="tcomment">
                <div id="comment-loader">
                    <svg width="200" height="150" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640"><!--!Font Awesome Free v7.0.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path d="M259.1 73.5C262.1 58.7 275.2 48 290.4 48L350.2 48C365.4 48 378.5 58.7 381.5 73.5L396 143.5C410.1 149.5 423.3 157.2 435.3 166.3L503.1 143.8C517.5 139 533.3 145 540.9 158.2L570.8 210C578.4 223.2 575.7 239.8 564.3 249.9L511 297.3C511.9 304.7 512.3 312.3 512.3 320C512.3 327.7 511.8 335.3 511 342.7L564.4 390.2C575.8 400.3 578.4 417 570.9 430.1L541 481.9C533.4 495 517.6 501.1 503.2 496.3L435.4 473.8C423.3 482.9 410.1 490.5 396.1 496.6L381.7 566.5C378.6 581.4 365.5 592 350.4 592L290.6 592C275.4 592 262.3 581.3 259.3 566.5L244.9 496.6C230.8 490.6 217.7 482.9 205.6 473.8L137.5 496.3C123.1 501.1 107.3 495.1 99.7 481.9L69.8 430.1C62.2 416.9 64.9 400.3 76.3 390.2L129.7 342.7C128.8 335.3 128.4 327.7 128.4 320C128.4 312.3 128.9 304.7 129.7 297.3L76.3 249.8C64.9 239.7 62.3 223 69.8 209.9L99.7 158.1C107.3 144.9 123.1 138.9 137.5 143.7L205.3 166.2C217.4 157.1 230.6 149.5 244.6 143.4L259.1 73.5zM320.3 400C364.5 399.8 400.2 363.9 400 319.7C399.8 275.5 363.9 239.8 319.7 240C275.5 240.2 239.8 276.1 240 320.3C240.2 364.5 276.1 400.2 320.3 400z"/></svg>
                </div>
                </div>
            </section>
            <% } %>
        </div>
    </article>

</div>

<nav class="nav main-pager" role="navigation" aria-label="Pagination" data-js="pager">
    <div class="nav main-lastinfo">
        <span class="nav-item-alt">
            <% if (theme.footerInfo) { %>
                <%= theme.footerInfo %>
            <% } %>
        </span>
    </div>
</nav>
</main>